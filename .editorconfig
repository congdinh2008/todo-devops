# EditorConfig - Maintain consistent coding styles
# https://editorconfig.org

root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Java files
[*.java]
indent_size = 4
max_line_length = 120

# XML files (Maven)
[*.xml]
indent_size = 4

# YAML files
[*.{yml,yaml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# JavaScript/TypeScript files
[*.{js,jsx,ts,tsx}]
indent_size = 2
max_line_length = 100

# CSS/SCSS files
[*.{css,scss,sass,less}]
indent_size = 2

# HTML files
[*.html]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = 0

# Shell scripts
[*.sh]
indent_size = 2

# Makefile
[Makefile]
indent_style = tab

# Properties files
[*.properties]
indent_size = 2

# Docker files
[Dockerfile]
indent_size = 2

[docker-compose*.yml]
indent_size = 2
